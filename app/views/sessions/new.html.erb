<% head_title t('titles.session.new') %>

<%= small_form title: t('titles.session.new'), errors: [@error] do %>
  <%= form_for :log_in, url: sessions_path do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :email, class: 'mdl-textfield__input', autofocus: true %>
      <%= f.label :email, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.password_field :password, class: 'mdl-textfield__input' %>
      <%= f.label :password, class: 'mdl-textfield__label' %>
    </div>

    <label class="remember-me mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
      <input type="checkbox" id="checkbox-1" class="mdl-checkbox__input">
      <span class="mdl-checkbox__label">Remember me</span>
    </label>

    <%= f.submit 'Log in', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>

    <div class="forgot-password">
      <%= link_to 'Forgot password?', new_password_reset_path %>
    </div>
  <% end %>
<% end %>
