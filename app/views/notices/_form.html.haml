= form_for [notebook, section, notice] do |f|
  = render 'shared/errors', errors: @notice.errors.full_messages

  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :name, class: 'mdl-textfield__input', autofocus: true
    = f.label :name, class: 'mdl-textfield__label'

  .textarea.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_area :text, rows: 8, class: 'mdl-textfield__input'
    = f.label :text, class: 'mdl-textfield__label'

  = f.submit class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'
