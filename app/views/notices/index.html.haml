- title current_section.name
- actions do
  = link_to '#' do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons edit
  = link_to '#' do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons delete

- if @notices.any?
  - @notices.each do |notice|
    = render 'notices/card', notice: notice
- else
  = box { 'You have no notices. Add the first one.' }

= add_fixed_button link: new_notebook_section_notice_path
