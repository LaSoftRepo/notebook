- title current_section.name
- actions do
  = link_to new_notebook_section_notice_path do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons add
  = link_to edit_notebook_section_path(id: current_section.id) do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons edit
  = link_to notebook_section_path(id: current_section.id), method: :delete, data: { confirm: t('are_you_sure') } do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons delete

.mdl-grid
  - if @notices.any?
    - @notices.each do |notice|
      = render 'notices/card', notice: notice
  - else
    = box { t('notice.no_notices') }

-# = add_fixed_button link: new_notebook_section_notice_path

- if current_section.can_create_child_section?
  .mdl-cell.mdl-cell--12-col.subsections
    Subsections
    = link_to new_notebook_child_section_path(parent_section_id: current_section.id) do
      %button.mdl-button.mdl-js-button.mdl-button--icon
        %i.material-icons add

  .mdl-grid
    - if @child_sections.any?
      - @child_sections.each do |child_section|
        = render 'sections/card', section: child_section
    - else
      = box { t('child_section.no_child_sections') }
