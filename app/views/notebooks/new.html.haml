- title 'New notebook', last_breadcrumb: true

= box do
  = form_for notebook do |f|
    = render 'shared/errors', errors: notebook.errors.full_messages

    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = f.text_field :name, class: 'mdl-textfield__input'
      = f.label :name, class: 'mdl-textfield__label'

    = f.submit 'Create', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'
