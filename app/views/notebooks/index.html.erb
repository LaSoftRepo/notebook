<% provide :head_title, 'Notebooks' %>

<%= box title: "Notebooks", button_text: 'Add', button_link: '#', button_data: { 'data-toggle' => 'modal', 'data-target' => '.bd-example-modal-lg' } do %>
  <div class="list-group">
    <% notebooks.each do |notebook| %>
      <%= link_to notebook.name, notebook_sections_path(notebook), class: 'list-group-item list-group-item-action' %>
    <% end %>
  </div>
<% end %>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="newNotebookModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="newNotebookModal">New notebook</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for Notebook.new, remote: true do |f| %>
          <%= f.input :name, required: true %>
          <%= f.button :submit, 'Create', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
