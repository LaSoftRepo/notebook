- title t('titles.notebook.index')
- actions do
  = link_to new_notebook_path do
    %button.mdl-button.mdl-js-button.mdl-button--icon
      %i.material-icons add

.mdl-grid
  - if @notebooks.any?
    - @notebooks.each do |notebook|
      = render 'notebooks/card', notebook: notebook
  - else
    = box { t('notebook.no_notebooks') }

