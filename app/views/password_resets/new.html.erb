<% provide :page_title, 'Forgot password?' %>
<%= center_box do %>
  <%= simple_form_for :password_reset, url: password_resets_path, method: :post do |f| %>
    <%= f.input :email, required: false %>
    <%= f.button :submit, 'Send password reset instructions', class: 'btn btn-primary' %>
  <% end %>
<% end %>
