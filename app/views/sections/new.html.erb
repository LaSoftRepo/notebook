<% title 'New section', last_breadcrumb: true %>

<%= box do %>
  <% if @parent_section %>
    <%= form_for @section, url: notebook_child_sections_path(notebook_id: current_notebook.id), method: :post do |f| %>
      <%= render 'shared/errors', errors: @section.errors.full_messages %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
        <%= f.label :name, class: 'mdl-textfield__label' %>
      </div>

      <div class="textarea mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :description, rows: 4, class: 'mdl-textfield__input' %>
        <%= f.label :description, class: 'mdl-textfield__label' %>
      </div>

      <%= hidden_field_tag :parent_section_id, @parent_section.id %>

      <%= f.submit 'Create', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>
  <% else %>
    <%= form_for [current_notebook, @section] do |f| %>
      <%= render 'shared/errors', errors: @section.errors.full_messages %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
        <%= f.label :name, class: 'mdl-textfield__label' %>
      </div>

      <div class="textarea mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_area :description, rows: 4, class: 'mdl-textfield__input' %>
        <%= f.label :description, class: 'mdl-textfield__label' %>
      </div>

      <%= f.submit 'Create', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>
  <% end %>
<% end %>
