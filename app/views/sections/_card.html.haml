.box.card.mdl-cell.mdl-cell--4-col.mdl-cell--4-col-tablet.mdl-cell--4-col-phone
  .top-section
    = link_to section.name, notebook_section_notices_path(section_id: section.id)
    .card-menu
      %button.mdl-button.mdl-js-button.mdl-button--icon{id: "menu-button-#{section.id}"}
        %i.material-icons more_vert
      %ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect{for: "menu-button-#{section.id}"}
        %li.mdl-menu__item Add notice
        - if section.can_create_child_section?
          %li.mdl-menu__item Add subsection
        %li.mdl-menu__item Edit
        %li.mdl-menu__item Delete
  - if section.can_create_child_section?
    .bottom-section
      = link_to 'Subsection', notebook_child_sections_path(parent_section_id: section.id)
