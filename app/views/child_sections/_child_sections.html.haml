- if section.can_create_child_section?
  .mdl-cell.mdl-cell--12-col.subsections
    Subsections
    = link_to new_notebook_child_section_path(parent_section_id: section.id) do
      %button.mdl-button.mdl-js-button.mdl-button--icon
        %i.material-icons add

  .mdl-grid
    - if section.child_sections.any?
      - section.child_sections.each do |child_section|
        = render 'sections/card', section: child_section
    - else
      = box { t('child_section.no_child_sections') }
